<%= form_for @user, url: { action: 'create' } do |f| %>
  <%= f.label :name, "Name: " %>
  <%= f.text_field :name %>
  <%= f.label :password, "Password: " %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation, "Password confirmation: " %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit :submit %>
<% end %>
