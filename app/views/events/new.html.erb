<%= form_for @event, url: { action: 'create' } do |f| %>
  <%= f.label :title, "Title: " %>
  <%= f.text_field :title %>
  <%= f.label :description, "Description: " %>
  <%= f.text_field :description %>
  <%= f.label :event_date, "Event date: " %>
  <%= f.date_field :event_date %>
  <%= f.submit :submit %>
<% end %>